{
  "version": 2,
  "buildCommand": "cd backend && npm ci && npx prisma generate && npm run build",
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ],
  "functions": {
    "api/index.js": {
      "includeFiles": "backend/dist/**"
    }
  }
}
